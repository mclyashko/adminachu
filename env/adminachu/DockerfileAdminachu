FROM gradle:7.6.2-jdk17 as builder
WORKDIR /application
COPY . /application/
RUN gradle clean build --exclude-task testInt

FROM openjdk:17 as backend
WORKDIR /root
COPY --from=builder /application/app/build/libs/adminachu.jar ./jar/
ENTRYPOINT ["java", \
            "-jar", "jar/adminachu.jar" \
            ]
